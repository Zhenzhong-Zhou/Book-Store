<%products.forEach(products => {%>
    <div class="row">
            <div class="col-sm-6 col-md-4" >
                <div class="thumbnail">
                    <img src="<%=products.imagePath%>" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3><%=products.title%></h3>
                        <p class="description"><%=products.desciption%></p>
                        <div class="clearfix">
                            <div class="price pull-left">$ <%=products.price%></div>
                            <a href="/add-to-cart/<%=products.id %>" class="btn btn-success pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
    </div>
<%})%>